<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <TrackerPackageContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\TrackerPackage\**\*.*</TrackerPackageContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyTrackerPackageAssets" BeforeTargets="Build">
        <ItemGroup>
            <TrackerPackageContentFiles Include="$(TrackerPackageContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying TrackerPackage files: $(TrackerPackageContentFilesPath) - #@(TrackerPackageContentFiles->Count()) files" Importance="high" />
        <Copy SourceFiles="@(TrackerPackageContentFiles)" DestinationFiles="@(TrackerPackageContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\TrackerPackage\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    </Target>
    
    <Target Name="ClearTrackerPackageAssets" BeforeTargets="Clean">
        <ItemGroup>
            <TrackerPackageDir Include="$(MSBuildProjectDirectory)\App_Plugins\TrackerPackage\" />
        </ItemGroup>
        <Message Text="Clear old TrackerPackage data" Importance="high" />
        <RemoveDir Directories="@(TrackerPackageDir)" />
    </Target>
</Project>
